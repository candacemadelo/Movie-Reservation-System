<%- include('partials/header') %>  
<!--last: styles.css-->
    <link rel="stylesheet" href="/css/styles.css">
</head>
    
<body data-spy="scroll" data-target=".navbar">
 
<%- include('partials/navbar') %>
  
    <div class="site-mobile-menu">
      <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close mt-3">
          <span class="icon-close2 js-menu-toggle"></span>
        </div>
      </div>
      <div class="site-mobile-menu-body"></div>
    </div> <!-- .site-mobile-menu -->
    
    <div class="site-blocks-cover overlay" style="background-image: url('images/watch_movie.jpg');" data-aos="fade" data-stellar-background-ratio="0.5" data-aos="fade">
      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7 text-center" data-aos="fade-up" data-aos-delay="400">
            <h1 class="mb-4">Catch films before everyone.</h1>
          </div>
        </div>
      </div>
    </div>

    <div class="site-section" id="movies">
      <div class="container">
        <div class="row">
          <div class="site-section-heading text-center mb-5 w-border col-md-6 mx-auto">
            <h2 class="mb-5">Now Showing</h2>
            <p><strong>Movies that everyone can enjoy.</strong></p>
          </div>
        </div>
      </div>

<!--        populate with movies-->
        <div class="container">
            <div class="row">
                <% movies.forEach(function(movie) { %>
                    <div class="col-md-6 col-lg-3 pb-3" data-aos="fade-up" data-aos-delay="100">
                          <a href="/movies/<%= movie._id %>" class="unit-9">
                            <div class="image" style="background-image: url('<%= movie.image %>');"></div>
                            <div class="unit-9-content">
                              <h2><%= movie.title %></h2>
                              <span><%= movie.genres %></span>
                            </div>
                          </a>
                        </div>
                <% }) %>
            </div>
        </div>  
      </div>

    <%- include('partials/footer') %>
    <script src="js/populate-data.js"></script>
    <script src="js/reservation.js"></script>
    
  </body>
</html>